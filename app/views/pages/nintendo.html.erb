<div class="container-fluid">
  <div class="row">
    <% @articles.each do |article| %>
    <% if Category.find(3) == article.category %>
        <div class="col-lg-6 card-group m-0 p-0 ">
          <div class="card m-0">
            <div class="row g-0">
              <div class="col-md-6">
                <%= image_tag(article.image.variant(resize: '900x500!'), {:class => "img-fluid"})%>
              </div>
              <div class="col-md-6">
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= link_to article.title, article, class: "orange text-decoration-none" %>
                    </h5>
                    <p class="card-text"><%= article.body %></p>
                    <p class="card-text">Created by: <%= article.user.email %></p>
                    <div class="position-absolute bottom-0 end-0 mb-3 mx-2 ">
                      <%= link_to like_article_path(article), method: :put, class: "like btn" do %>
                          <i class="far fa-thumbs-up"></i>
                          <span class="badge"> <%= article.get_upvotes.size %></span>
                      <% end %>
                      <%= link_to unlike_article_path(article), method: :put, class: "unlike btn" do %>
                          <i class="far fa-thumbs-down"></i>
                          <span class="badge"> <%= article.get_downvotes.size %></span>
                      <% end %>
                    </div>
                  </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
    <% end %>
  </div>
</div>

<br>